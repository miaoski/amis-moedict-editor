{
	"manifest_version": 2,
	"name": "moedict-amis-editor",
	"version": "0.1",
	"description": "Edit an entry in amis.moedict.tw and submit it to a branch on Github. 阿美語萌典的線上編輯器，修改的內容會上傳到 Github 的 safulo-draft 分支。",
	"icons": {
		"48": "icons/amis-48.png",
		"96": "icons/amis-96.png"
	},
	"content_scripts": [
		{
			"matches": ["*://amis.moedict.tw/*"],
			"js": [
				"jquery-3.6.0.min.js",
				"amis-editor.js",
				"app/build/static/js/main.f1bf6cac.js"
			],
			"css": ["app/build/static/css/main.eb33a873.css"]
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "amis-editor@miaoski.idv.tw"
		}
	},
	"options_ui": {
		"open_in_tab": true,
		"page": "prefs.html"
	},
	"permissions": ["storage", "<all_urls>", "activeTab"]
}
